# PHP
--langmap=php:.engine.inc.module.theme.install.php --PHP-kinds=+cf-v
--recurse
--languages=PHP
--exclude=.svn
--exclude=.git
--exclude="*/_*cache/*"
--exclude="*/_*logs{0,1}/*"
--exclude="*/_*data/*"
